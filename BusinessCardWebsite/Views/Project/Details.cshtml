@model BusinessCardWebsite.Models.Project

@{
    ViewBag.Title = Model.name;
}

<link rel="stylesheet" href="~/Scripts/owlcarousel/owl.carousel.min.css">
<link rel="stylesheet" href="~/Scripts/owlcarousel/owl.theme.default.min.css">
<script src="~/Scripts/owlcarousel/owl.carousel.min.js"></script>


<div id="owl-carousel" class="owl-carousel owl-theme">

    @foreach (var item in Model.images)
    {
        <div class="item">
            <div class="mb-1">
                <div class="row">
                    <div class="col-md-12">
                        <img src="@item.img_path" class="card-img w-auto m-auto h-primary" alt="image">
                    </div>
                </div>
            </div>
        </div>
    }

</div>


<hr />


<div>
    @Html.Raw(Model.content)
</div>

<div class="text-right">
    <a href="@Model.doc_path">Открыть кейс <img src="~/Content/img/pdf.png" width="30" height="30" /></a>
    <p>
        @Html.ActionLink("Вернутся к просмотру портфолио", "Index")
    </p>
    @if (User.Identity.IsAuthenticated)
    {
        <p>
            @Html.ActionLink("Изменить", "Edit", new { id = Model.id }, new { @class = "btn btn-light mt-1" })
            @Html.ActionLink("Удалить", "Delete", new { id = Model.id }, new { @class = "btn btn-danger mt-1" })
        </p>
    }
</div>


<script>
    $('#owl-carousel').owlCarousel({
        loop: true,
        margin: 30,
        dots: true,
        nav: true,
        items: 1,
        autoplay: true,
        autoplayTimeout: 10000,
        autoplayHoverPause: true
    })
</script>
